{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "data": {
    "url": "https://raw.githubusercontent.com/car121201/FIT3179/main/Assignment2/tabacco_manufacturer.csv"
  },
  "title": {
    "text" : "Top 10 Tabacco Manufacturer"},
        
  "width" : 750,
  "height" : 600,

  "layer": [{
    "mark": {
      "type": "arc", 
      "innerRadius": 15, 
      "stroke":"lightgrey"}
    }
  ],
  
  "params": [
    {"name": "highlight", "select": {"type": "point", "on": "mouseover"}},
    {"name": "select", "select": "point"}
          ],

  "encoding": {
    "theta": {
      "field": " Market Cap (Billion)", 
      "type": "quantitative", 
      "stack": true},
    "radius": {
      "field": " Market Cap (Billion)", 
      "scale": {
        "type": "sqrt", 
        "zero": true, 
        "rangeMin": 40}},
    "color": {
      "field": "Manufacturer", 
      "type": "nominal", 
      "scale" :{"scheme": "reds"},
      "legend": {
        "labelFont": "Ubuntu Condensed",
                "labelFontStyle": "san-serif",
                "titleFont": "Ubuntu Condensed",
                "titleFontStyle": "san-serif"
      }},
    "fillOpacity": {
            "condition": {"param": "highlight", "value": 1},
            "value": 0.5
        },
    "strokeWidth": {
            "condition": [
              {
                "param": "highlight",
                "empty": false,
                "value": 3
              }
            ],
            "value": 1
        },

      "tooltip": [
            {"field": "Manufacturer", "type": "nominal", "title": "Manufacturer"},
            {"field": " Country ", "type": "nominal", "title": "Country"},
            {"field": " Market Cap (Billion)", "type": "quantitative", "title": "Market Cap (Billion)"}
        ]
  },
  "config": {"style": {
    "cell": {
      "stroke": "transparent"
    }
  }}

}
